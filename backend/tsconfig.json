{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // Enable full strict mode (includes strictNullChecks, noImplicitAny, strictBindCallApply, etc.)
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "useUnknownInCatchVariables": false,
    "useDefineForClassFields": true,
    "types": ["reflect-metadata", "node", "jest", "@jest/globals"],
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": [
    "src/templates/**/*",
    "ts_backup/**/*",
    "dist/migration-tools/**/*",
    "node_modules",
    "**/*.bak/**",
    "**/*.bak"
  ]
}
