{
  "name": "fluxori-backend",
  "version": "1.0.0",
  "description": "Backend API for Fluxori - Inventory & Marketplace Management Platform",
  "author": "Fluxori Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dep:validate": "depcruise src",
    "dep:graph": "depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph.svg",
    "dep:modules": "depcruise src --include-only \"^src/modules\" --output-type dot | dot -T svg > module-dependencies.svg",
    "dep:archi": "depcruise src --output-type archi | dot -T svg > architecture.svg",
    "dep:check-circular": "depcruise --config --validate .dependency-cruiser.js src",
    "doc:generate": "typedoc --out docs/api-docs"
  },
  "dependencies": {
    "@google-cloud/access-context-manager": "^2.2.0",
    "@google-cloud/aiplatform": "^4.1.0",
    "@google-cloud/compute": "^4.1.0",
    "@google-cloud/dlp": "^5.1.0",
    "@google-cloud/firestore": "^7.4.0",
    "@google-cloud/functions": "^3.1.0",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/monitoring": "^5.0.0",
    "@google-cloud/scheduler": "^3.3.1",
    "@google-cloud/secret-manager": "^5.0.1",
    "@google-cloud/service-usage": "^2.2.1",
    "@google-cloud/storage": "^7.15.2",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/swagger": "^11.1.1",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "google-auth-library": "^9.7.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.2",
    "oauth-1.0a": "^2.2.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.13",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "dependency-cruiser": "^16.10.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.2",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.31.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
